---
const {
  title = "全中国最激烈故事",
  description = "《全中国最激烈故事》在线阅读站——泰山府在此著。",
  ogType = "website",
  ogImage = "/images/COVER.jpg"
} = Astro.props;

const siteUrl = Astro.site ?? new URL("https://cn-nonsense.netlify.app");
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImageUrl = new URL(ogImage, siteUrl).toString();
const rssUrl = new URL("/rss.xml", siteUrl).toString();
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="全中国最激烈故事" />
    <meta property="og:locale" content="zh_CN" />
    <meta property="og:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <link rel="alternate" type="application/rss+xml" title="全中国最激烈故事 RSS" href={rssUrl} />
    <title>{title}</title>
    <slot name="head" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+SC:wght@900&family=Noto+Serif+SC:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <script is:inline>
      (function(){
        try {
          const t = localStorage.getItem('theme');
          if (t === 'dark' || (!t && matchMedia('(prefers-color-scheme:dark)').matches)) {
            document.documentElement.classList.add('dark');
          }
        } catch (_) {
          if (matchMedia('(prefers-color-scheme:dark)').matches) {
            document.documentElement.classList.add('dark');
          }
        }
      })();
    </script>
    <style>
      :root {
        --bg: #f0ece4;
        --bg-ink: #111;
        --paper: #e8e2d8;
        --accent: #c41a1a;
        --muted: #5a5248;
        --line: #c4b8a4;
        --accent-glow: #c41a1a33;
      }
      html.dark {
        --bg: #0a0a0a;
        --bg-ink: #d4cfc7;
        --paper: #141414;
        --accent: #e02020;
        --muted: #7a7268;
        --line: #2a2520;
        --accent-glow: #e0202044;
      }
      * { box-sizing: border-box; }
      body {
        margin: 0;
        color: var(--bg-ink);
        font-family: "Noto Serif SC", serif;
        background: var(--bg);
        min-height: 100vh;
        transition: background .3s, color .3s;
      }
      .skip-link {
        position: absolute;
        left: 1rem;
        top: -3rem;
        background: var(--accent);
        color: #fff;
        padding: 0.5rem 0.7rem;
        border-radius: 0.35rem;
        z-index: 10;
        text-decoration: none;
      }
      .skip-link:focus {
        top: 0.8rem;
      }
      main {
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem 1.25rem 4rem;
      }
      .site-head {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        border-bottom: 1px solid var(--line);
        margin-bottom: 1.5rem;
        padding-bottom: 0.8rem;
      }
      .site-title {
        font-size: clamp(1.2rem, 3.5vw, 1.6rem);
        font-weight: 700;
        margin: 0;
      }
      .site-title a {
        text-decoration: none;
        color: var(--bg-ink);
      }
      .head-right {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }
      .nav-link {
        font-size: 0.88rem;
        color: var(--muted);
        text-decoration: none;
      }
      .nav-link:hover { color: var(--accent); }
      .theme-toggle {
        background: none;
        border: 1px solid var(--line);
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1rem;
        color: var(--muted);
        transition: border-color .2s;
        flex-shrink: 0;
      }
      .theme-toggle:hover { border-color: var(--accent); }
      .frame {
        background: var(--paper);
        border: 1px solid var(--line);
        border-radius: 0.5rem;
        padding: 1.25rem;
      }
      a { color: var(--accent); }
      @media (max-width: 640px) {
        .site-head { gap: 0.5rem; }
        main { padding-top: 1.2rem; }
      }
    </style>
  </head>
  <body>
    <a class="skip-link" href="#main-content">跳转到正文</a>
    <main id="main-content">
      <header class="site-head">
        <h1 class="site-title"><a href="/">全中国最激烈故事</a></h1>
        <div class="head-right">
          <a href="/search" class="nav-link">搜索</a>
          <button class="theme-toggle" id="theme-toggle" aria-label="切换深色模式">
            <span id="theme-icon">☀</span>
          </button>
        </div>
      </header>
      <slot />
    </main>
    <script is:inline>
      (function(){
        const btn = document.getElementById('theme-toggle');
        const icon = document.getElementById('theme-icon');
        if (!(btn instanceof HTMLButtonElement) || !(icon instanceof HTMLElement)) {
          return;
        }
        function update(){
          const dark = document.documentElement.classList.contains('dark');
          icon.textContent = dark ? '☀' : '☾';
        }
        update();
        btn.addEventListener('click', function(){
          document.documentElement.classList.toggle('dark');
          const dark = document.documentElement.classList.contains('dark');
          try {
            localStorage.setItem('theme', dark ? 'dark' : 'light');
          } catch (_) {
            // Ignore storage failures (private mode / quota / disabled storage)
          }
          update();
        });
      })();
    </script>
  </body>
</html>
